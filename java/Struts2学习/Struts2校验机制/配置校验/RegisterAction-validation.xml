<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC "-//Apache Struts//XWork Validator 1.0.3//EN"
        "http://struts.apache.org/dtds/xwork-validator-1.0.3.dtd">
        
<validators>
	<field name="username">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>username不能为空</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[(\w{4,25})]]></param>
			<message>请保证username是长度在4到25之间的由英文、数字构成的字符串</message>
		</field-validator>
	</field>
	
 	<field name="password">
		<field-validator type="requiredstring">
			<param name="trim">true</param>
			<message>password不能为空</message>
		</field-validator>
		<field-validator type="regex">
			<param name="regex"><![CDATA[(\w{4,25})]]></param>
			<message>请保证password是长度在4到25之间的由英文、数字构成的字符串</message>
		</field-validator>
	</field>
	
	<field name="age">
		<field-validator type="int">
			<param name="min">1</param>
			<param name="max">150</param>
			<message>age保证在${min}-${max}之间</message>
		</field-validator>
	</field>
	
	<field name="birthday">
		<field-validator type="date">
			<param name="min">1900-01-01</param>
			<param name="max">2050-02-21</param>
			<message>date保证在${min}-${max}之间</message>
		</field-validator>
	</field>
</validators>