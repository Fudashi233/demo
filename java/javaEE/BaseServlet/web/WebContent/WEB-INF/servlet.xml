<?xml version="1.0" encoding="UTF-8"?>

<service>
	<servlet className="cn.edu.jxau.web.servlet.UserServlet">
		<action methodName="login">
			<result name="success">
				<type>forward</type>
				<destinationURI>/select.jsp</destinationURI>
			</result>
			<result name="fail">
				<type>forward</type>
				<destinationURI>/login.jsp</destinationURI>
			</result>
		</action>
		<action methodName="logout">
			<result name="success">
				<type>forward</type>
				<destinationURI>/index.jsp</destinationURI>
			</result>
		</action>
	</servlet>
</service>